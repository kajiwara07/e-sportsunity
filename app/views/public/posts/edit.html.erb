<%= form_with model: @post, url: post_path, id: 'post', local: true do |f| %>
  <div class='post-edit img-fluid' style="padding-left:15px; padding-right:15px;">
    <div class="container-fluid my-5">
      <div class="row">
        <div class="card w-50 mx-auto">
          <i class="fas fa-edit left-side__search-title text-dark h2">編集しよう</i>
          <div id="error_explanation"> 
            <% if @post.errors.any? %>
              <h3><%= @post.errors.count %> 件のエラーが出ました。</h3>
              <ul>
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
          </div>
            <%= f.label :image, '写真', class: "text-dark" %><br>
            <%= f.file_field :image, accept: "image/*", class: "text-dark" %>
          <div>
            <%= f.label :title, '題名', class: "text-dark" %><br>
            <%= f.text_field :title %>
          </div>

          <div>
            <%= f.label :body, 'ポスト本文(500文字まで)', class: "text-dark" %><br>
            <%= f.text_area :body, size: "100x20", class: "text-dark form-control", rows: 2 %>
          </div>

          <span class="mx-auto">
            <%= f.submit '更新', class: "btn btn-primary mt-4 " %>
            <%= link_to '削除', post_path(@post.id), class: "btn btn-danger mt-4", method: :delete, data: { confirm: "本当に削除しますか？" } %>
          </span>
         </div>
        </div>
      </div>
    </div>
  </div>
<% end %>