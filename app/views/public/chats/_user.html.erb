<div class="col-md-3">
  <h2 class="text-white">User info</h2>
  <%= link_to "グループを作成する", new_chat_path %> |
  <%= link_to "グループ一覧", chats_path %>
  
  <% profile_image = @user.get_profile_image %>
  <%= image_tag profile_image, size: "100x100" %>
  
  <table class="table text-white">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
    </tbody>
  </table>
  
  <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog" aria-hidden="true"></i>
    <% end %>
  </div>

  <h5 class="mt-3">グルチャコメント</h5>
  <%= form_with model: Chat.new do |f| %>
    <div class="form-group">
      <label class="text-white">コメント</label>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit '投稿', class: "btn btn-success" %>
    </div>
  <% end %>
</div>

