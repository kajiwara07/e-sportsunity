<div class='container-fluid back-ground'>
  <div class="row">
    <div class="col-md-12 bg-white my-5">
      <h1 class="text-dark">全ユーザー一覧</h1>
      <% flash.each do |message_type, message| %>
       <div class="flash-message <%= message_type %>"><%= message %></div>
      <% end %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-1">プロフ画像</th>
            <th class="col-1">ユーザー名</th>
            <th class="col-3">メールアドレス</th>
            <th class="col-1">アクション</th>
          </tr>
        </thead>
        <tbody class="scroll-bar2">
          <% @users.each do |user| %>
          <tr>
            <td class="col-1">
              <%= image_tag user.get_profile_image, size: "50x50" %>
            </td>
            <td class="col-1"><%= user.name %></td>
            <td class="col-3"><%= user.email %></td>
            <td class="col-1">
              <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-md-12">
        <h1 class="text-dark">コメント一覧</h1>
        <% flash.each do |message_type, message| %>
        <div class="flash-message <%= message_type %>"><%= message %></div>
        <% end %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th class="col-1">プロフ画像</th>
              <th class="col-1">ユーザー名</th>
              <th class="col-5">コメント</th>
              <th class="col-1">アクション</th>
            </tr>
          </thead>
          <tbody class="scroll-bar">
            <% @comments.each do |comment| %>
            <tr>
              <td class="col-1">
                  <%= image_tag comment.user.get_profile_image, size: "50x50" %>
              </td>
              <td class="col-1">
                <%= comment.user.name %>
              </td>
              <td class="col-5"><%= comment.body %></td>
              <td class="col-1">
                <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
       <div class="col-md-12">
         <h1 class="text-dark">グループ一覧</h1>
         <% flash.each do |message_type, message| %>
         <div class="flash-message <%= message_type %>"><%= message %></div>
         <% end %>
      <table class="table text-dark">
  <thead>
    <tr>
      <th></th>
      <th >グループ名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="scroll-bar2">
    <% @chats.each do |chat| %>
      <tr>
        <td>
          <% if chat.chat_image.present? %>
            <%= image_tag chat.chat_image, size: "50x50" %>
          <% else %>
            <%= image_tag asset_path('no_image.jpg'), size: "50x50" %>
          <% end %>
        </td>
        <td><%= chat.name %></td>
        <td><%= chat.introduction %></td>
        <td><%= link_to "削除",  admin_chat_path(chat), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    </div>
    </div>
  </div>
</div>
