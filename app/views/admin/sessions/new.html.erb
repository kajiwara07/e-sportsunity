<div class="container ">
  <div class="row">
   <div class="mx-auto">
    <h2 class="text-white my-5">Log in</h2>

     <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="field">
       <%= f.label :email, class:"text-white" %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
       <%= f.label :password, class:"text-white" %><br />
       <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

     <% if devise_mapping.rememberable? %>
      <div class="field">
       <%= f.check_box :remember_me %>
       <%= f.label :remember_me, class:"text-white" %>
      </div>
     <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
   <% end %>

   <%= render "admin/shared/links" %>
  </div>
 </div>
</div>