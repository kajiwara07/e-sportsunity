<div class="card-list-container ">
 <div class="row">    
 <div class="mx-auto">
   <h1>みんなのポスト</h1>
  <%= link_to "新規ポスト", new_post_path, class: "btn btn-primary" %> 
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="posts-index-item">
        <div class="post-image-item">
         <div class="d-flex" style=" padding: 5px;">
          <div class="post-user-image">
             <% if post.user %>
              <%= link_to user_path(post.user_id) do %>
               <%= image_tag post.user.get_profile_image, size: "50x50", class: "rounded-circle"; %>
              <% end %>
             <% end %>
          </div>
          <div class="line-height">
            <span><%= post.user.name %></span>
          </div>
          </div>
          </div>
          <div class="post-main">
           <%= link_to post_path(post.id) do %>
            <% if post.image_url.present? %>
              <%= image_tag post.image_url, class: "card-img-top" %>
              <% else %>
            <% end %>
            <% end %>
          </div>
          <p class="post-user-names">
            <span><%= post.title %></span>
          </p>
          <div class="posts-user-names">
            <span><%= post.body %></span>
          </div>
          <br>
          <div class="post-edit">
          <%= link_to "詳細", post_path(post.id) %>
          </div>
      </div>
    </div>
  <% end %>
  </div>
  </div>
 </div>