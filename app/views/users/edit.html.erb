<%= form_with(model: @user, url: user_path, local: true) do |f| %>
<div class="container-fluid my-5 mx-5">
  <div class="row">
  <div class="mx-auto">
   <i class="fas fa-edit left-side__search-title text-white h2 ">編集しよう</i>
<div id="error_explanation">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
</div>
<div class="profile-image">
  <%= image_tag @user.get_profile_image, size: "100x100", style: "padding: 10px;", class: "rounded-circle "; %>
   </div>
     <br>
     <%= f.label :名前, class: "text-white" %>
     <%= f.text_field :name %>
     <br>
     <%= f.label :email, class: "text-white" %>
     <%= f.email_field :email %>
     <br>
     <%= f.label :プロフィール画像, class: "text-white" %>
     <%= f.file_field :profile_image, class: "text-white" %>
   <br>
   <%= f.submit '更新' %>
   <% end %>
   <br>
  </div>
 </div>
</div>